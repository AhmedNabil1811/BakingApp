<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.bakingapp.activities.RecipeInfoActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.example.android.bakingapp.fragments.RecipeInfoFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        tools:context=".activities.RecipeInfoActivity"
        android:id="@+id/TODO"
        tools:layout="@layout/fragment_recipe_info"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/step_discreption_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/step_discreption_container"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:scaleType="centerInside" />

        <FrameLayout
            android:id="@+id/step_video_container"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>